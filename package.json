{
  "private": true,
  "name": "@grail/eslint-config-grail",
  "version": "1.0.0",
  "description": "GRAIL eslint config",
  "main": "src/index.js",
  "scripts": {
    "flow": "flow",
    "lint": "eslint --ext .js --ext .jsx src/ cypress/ scripts/",
    "lint-fix": "yarn lint --fix",
    "precommit": "lint-staged",
    "test:staged": "yarn lint"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "devDependencies": {
    "babel-eslint": "8.2.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.9.1",
    "lint-staged": "^7.2.0"
  },
  "peerDependencies": {
    "eslint": ">= 3"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --rule flowtype/require-valid-file-annotation:2 --fix",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
